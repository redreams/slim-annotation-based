{
    "name": "redreams/slim-annotation-based",
    "description": "Slim application with support annotation based controllers",
    "keywords": ["slim", "annotations", "controllers"],
    "homepage": "https://github.com/redreams/slim-annotation-based",
    "license": "MIT",
    "authors": [
        {
            "name": "Gennady Knyazkin",
            "email": "dev@gennadyx.tech",
            "homepage": "http://gennadyx.tech"
        }
    ],
    "require": {
        "php" : "^7.1|^7.2",
        "slim/slim": "^3.10",
        "doctrine/annotations": "^1.6",
        "doctrine/cache": "^1.7",
        "redreams/class-finder": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "^7.2"
    },
    "autoload": {
        "psr-4": {
            "Redreams\\Slim\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Redreams\\Slim\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "php vendor/bin/phpunit --configuration ./phpunit.xml.dist --coverage-clover=coverage.clover"
    }
}
